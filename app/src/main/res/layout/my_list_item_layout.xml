<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/my_selector">


    <LinearLayout
        android:id="@+id/lis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sub_no"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droidkufi_regular"
            android:padding="2dp"
            android:text="رقم الاشتراك "
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/my_selector"
            />

        <TextView
            android:id="@+id/sub_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droidkufi_regular"
            android:padding="2dp"
            android:text="اسم المشترك"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/my_selector"/>

        <TextView
            android:id="@+id/building_no"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droidkufi_regular"
            android:padding="2dp"
            android:text="رقم المبنى"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/my_selector"/>

        <TextView
            android:id="@+id/location_no"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droidkufi_regular"
            android:padding="2dp"
            android:text="رقم الموقع"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/my_selector"/>

        <TextView
            android:id="@+id/street_no"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="2dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/droidkufi_regular"
            android:text="رقم الشارع"
            android:background="@drawable/my_selector"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="2dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/droidkufi_regular"
            android:text="حالة العداد"
            android:background="@drawable/my_selector"/>

        <TextView
            android:id="@+id/pre_reading"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="2dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/droidkufi_regular"
            android:text="القراءة السابقة"
            android:background="@drawable/my_selector"/>
        <TextView
            android:id="@+id/pre_reading_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="2dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/droidkufi_regular"
            android:text="تاريخ ق.السابقة"
            android:background="@drawable/my_selector"/>
        <TextView
            android:id="@+id/current_reading"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="2dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/droidkufi_regular"
            android:text=" ق.الحالية"
            android:background="@drawable/my_selector"/>
        <TextView
            android:id="@+id/current_reading_date"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="2dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/droidkufi_regular"
            android:text="تاريخ ق.الحالية"
            android:background="@drawable/my_selector"
            />
    </LinearLayout>


</RelativeLayout>